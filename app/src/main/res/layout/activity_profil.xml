<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Profil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="70dp"
                android:text="@string/Profil_textView_name_renseignement"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Nom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_edit_text"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal_EditText"
                android:layout_marginTop="50dp"
                android:background="@drawable/input"
                android:hint="Nom"
                android:inputType="text"
                android:paddingHorizontal="@dimen/layout_PaddingLeft_EditText"
                android:textSize="@dimen/text_size_button" />

            <EditText
                android:id="@+id/Prenom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_edit_text"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal_EditText"
                android:layout_marginTop="@dimen/layout_marginTop_EditText_between_EditText"
                android:background="@drawable/input"
                android:hint="PrÃ©nom"
                android:inputType="text"
                android:paddingHorizontal="@dimen/layout_PaddingLeft_EditText"
                android:textSize="@dimen/text_size_button" />

            <EditText
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_edit_text"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal_EditText"
                android:layout_marginTop="@dimen/layout_marginTop_EditText_between_EditText"
                android:background="@drawable/input"
                android:hint="Date de naissance"
                android:inputType="date"
                android:paddingHorizontal="@dimen/layout_PaddingLeft_EditText"
                android:textSize="@dimen/text_size_button" />

            <Button
                android:id="@+id/validate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_button"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal_button"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:text="@string/app_button_name_valide"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_button"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


