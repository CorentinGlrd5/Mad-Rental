<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReservationFinal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="50dp"
                android:text="Merci de saisir ici votre demandes spécifiques :"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal_EditText"
                android:layout_marginTop="@dimen/layout_marginTop_EditText_between_EditText"
                android:background="#d9d9d9"
                android:gravity="top"
                android:hint="Votre message ..."
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="50dp"
                android:text="Prix final : 194 €"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_button"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal_button"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="@string/app_button_name_valide"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_button"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>