<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corentin.mad_rental">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="MadRental">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Reservation" />
        <activity
            android:name=".Profil"
            android:label="Mon profil"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ReservationEtape1"
            android:label="Reservation - étape 1 / 2" />
        <activity
            android:name=".ReservationEtape2"
            android:label="Reservation - étape 2 / 2"
            android:parentActivityName=".ReservationEtape1" />
        <activity android:name=".Search"></activity>
    </application>

</manifest>